<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    // username
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username:"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editT_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="change name"
            android:text="xiaolei"/>
    </LinearLayout>
// age
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="age:"
            android:textSize="18sp"/>

        <EditText
            android:hint="change age"
            android:text="18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editT_age"/>
    </LinearLayout>
// gender
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gender:"
            android:textSize="18sp"/>

        <EditText
            android:hint="change gender"
            android:text="Male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editT_gender"/>
    </LinearLayout>
// height
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="height:"
            android:textSize="18sp"/>

        <EditText
            android:hint="change height"
            android:text="6'10'"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editT_height"/>
    </LinearLayout>
    // weight
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weight:"
            android:textSize="18sp"/>

        <EditText
            android:hint="change weight"
            android:text="78KG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editT_weight"/>
    </LinearLayout>
    // button
    <LinearLayout
        android:padding="26dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="Save"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_editprofile"/>
    </LinearLayout>

</LinearLayout>