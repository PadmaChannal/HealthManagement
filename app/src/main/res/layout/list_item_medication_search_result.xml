<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/medication_search_list_item"
                android:padding="@dimen/list_item_padding">

    <ImageView
        android:id="@+id/iv_medication_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/medium"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@drawable/ic_medicine"/>

    <TextView
        android:id="@+id/tv_medication_search_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_medication_search_icon"
        android:textColor="@color/colorPrimaryText"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tv_medication_search_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_medication_search_name1"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tv_medication_search_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_medication_search_name2"
        android:textColor="@color/colorPrimaryText"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/tv_medication_search_symptom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:text="Disease/Symptom"
        android:layout_below="@id/tv_medication_search_name1"/>
</RelativeLayout>