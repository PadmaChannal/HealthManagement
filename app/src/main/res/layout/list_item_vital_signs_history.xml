<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/current_medication_list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium">

    <ImageView
        android:id="@+id/ivVitalSigns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_menu_vital_signs"
        android:backgroundTint="@color/googleRed"
        android:padding="@dimen/small"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"/>

    <TextView
        android:id="@+id/tvXLVSHId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:visibility="gone"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tvXLVSHDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicine Names"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16dp"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/ivVitalSigns"
        android:layout_toEndOf="@+id/ivVitalSigns"/>




</RelativeLayout>