<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dietView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDECE0"
    android:clipToPadding="false"
    android:fastScrollEnabled="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:titleEnabled="false"
    tools:context="com.along.android.healthmanagement.fragments.diet.DietFragment"
    tools:showIn="@layout/fragment_diet"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/llDietStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="@dimen/medium"
            android:weightSum="1">
        <ImageView
            android:id="@+id/ivStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/medium"
            android:background="@drawable/ic_calendar"
            android:backgroundTint="@color/mediumLightIcon" />

        <TextView
            android:id="@+id/tvStartDateDiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/tvStartDateInDiet"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Start date in millis" />
    </LinearLayout>
// breakfast
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/diet_card_view_breakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="@dimen/medium"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvDietId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivDietBreakfastImge"
                android:layout_width="38dp"
                android:layout_height="37dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:adjustViewBounds="false"
                android:background="@drawable/ic_breakfast"
                android:cropToPadding="false"
                tools:ignore="ObsoleteLayoutParam"/>

            <LinearLayout
                android:id="@+id/diet_breakfast_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:weightSum="1"
                >
                <TextView
                    android:id="@+id/tvDiet_BreakfastTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/ivVitalSigns"
                    android:text="Add breakfast"
                    android:textColor="@color/colorMediumText"
                    android:textSize="18dp"
                    tools:ignore="ObsoleteLayoutParam"
                    />
                <TextView
                    android:id="@+id/tvDietBreakfastContent"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/ivVitalSigns"
                    android:text="Recommended: 0 cal"
                    android:textColor="@color/colorMediumText"
                    android:textSize="14dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/diet_add"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="0dp"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/diet_breakfast_addBut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_add"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
