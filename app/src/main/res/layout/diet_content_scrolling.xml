                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="1"
                >
                //horizontal
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_weight="0.48"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:weightSum="1">
                <TextView
                    android:id="@+id/tvDiet_waterFloz"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/ivVitalSigns"
                    android:text="0 fl.oz"
                    android:textColor="@color/colorMediumText"
                    android:textSize="14dp"
                    />
                <TextView
                    android:id="@+id/tvDiet_water1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/ivVitalSigns"
                    android:text="Water"
                    android:textColor="@color/colorMediumText"
                    android:textSize="18dp"
                    tools:ignore="ObsoleteLayoutParam"
                    />

            </LinearLayout>
                <View
                    android:id="@+id/horizontal_line"
                    android:layout_width="420dp"
                    android:layout_height="1dip"
                    android:layout_below="@id/tvDiet_water1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:layout_weight="0.04"
                    android:background="@color/greyE" />
// cup
            <LinearLayout
                android:id="@+id/diet_watercup"
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:weightSum="1">
// cup1
                <RelativeLayout
                    android:layout_width="35dp"
                    android:layout_height="50dp">
