                        />
                <ImageView
                    android:id="@+id/diet_cup1"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/cup"
                    />
                </RelativeLayout>

